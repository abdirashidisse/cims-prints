<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161413"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/scanner_view_prompt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dip"
        android:paddingTop="20dip"
        android:text="Please Scan The Participant's Thumbs"
        android:textColor="#FFFFFF"
        android:textSize="20dip" />
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent">
	    <LinearLayout 
	        android:id="@+id/scan_frame_holder_left"
	        android:orientation="horizontal"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight=".35">
	        <LinearLayout
	            android:id="@+id/scan_frame_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:orientation="vertical"
	                android:layout_weight=".8" >
					<TextView
	                    android:id="@+id/scanner_txt_finger_1_title"
	                    android:layout_width="170dip"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="10dip"
	                    android:layout_marginRight="10dip"
	                    android:text="Left Thumb"
	                    android:textColor="@color/white"
	                    android:textSize="20dip" />
					<TextView
	                    android:id="@+id/scanner_txt_finger_1_quality"
	                    android:layout_width="170dip"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="10dip"
	                    android:layout_marginRight="10dip"
	                    android:layout_marginTop="30dip"
	                    android:text="Score ="
	                    android:textColor="@color/white"
	                    android:textSize="15dip" />
					<TextView
	                    android:id="@+id/scanner_txt_finger_2_title"
	                    android:layout_width="170dip"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="10dip"
	                    android:layout_marginRight="10dip"
	                    android:text="Right Thumb"
	                    android:textColor="@color/white"
	                    android:textSize="20dip" />
	
	                <TextView
	                    android:id="@+id/scanner_txt_finger_2_quality"
	                    android:layout_width="170dip"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="10dip"
	                    android:layout_marginRight="10dip"
	                    android:layout_marginTop="30dip"
	                    android:text="Score = "
	                    android:textColor="@color/white"
	                    android:textSize="15dip" />
	    		</LinearLayout>
	    	</LinearLayout>
    	</LinearLayout>
   	    <LinearLayout 
	        android:id="@+id/scan_frame_holder_right"
	        android:orientation="horizontal"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight=".65">
	        <LinearLayout
	            android:id="@+id/scan_frame_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
				<ImageButton
		            android:id="@+id/scanner_btn_finger_1"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_gravity="right"
		            android:scaleType="fitCenter"
		            android:src="@drawable/l_thumb" />
		        <ImageButton
		            android:id="@+id/scanner_btn_finger_2"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:layout_gravity="right"
		            android:scaleType="fitCenter"
		            android:src="@drawable/r_thumb" />
	    	</LinearLayout>
				<Button
	                android:id="@+id/scan_btn_proceed"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:layout_marginRight="10dip"
	                android:text="Proceed"
	                android:textColor="@color/white" />
				<Button
		            android:id="@+id/scan_btn_skip"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="SKIP" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout><!-- From: file:/home/sarwar/workspace/biometrac/BMTCore/app/src/main/res/layout/scanner_view_layout.xml -->