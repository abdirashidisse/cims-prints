<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.biometrac.core"
    android:versionCode="3"
    android:versionName="15.06.04.01" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
	<uses-feature android:name="android.hardware.usb.host" />
	<uses-permission
	     android:name="org.commcare.dalvik.provider.cases.read" />
	<uses-permission
	     android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
	<uses-permission
	     android:name="android.permission.KILL_BACKGROUND_PROCESSES"/>
    <uses-permission
        android:name="android.permission.USB_PERMISSION" />
    <uses-permission
        android:name="android.permission.READ_LOGS"/>
    <uses-permission
        android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <application
        android:name="Controller"
        android:label="Biometrac Core"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme">
        <receiver android:name="broadcast.ScannerReceiver">
            <intent-filter>
                <action android:name="com.biometrac.screentest.ScanningActivity.USB_PERMISSION"/>
            </intent-filter>
        </receiver>
        <receiver android:name="broadcast.USBReceiver">
            <intent-filter>
                <action android:name="com.biometrac.core.SCANNER_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>
            <meta-data android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" android:resource="@xml/usb_filter" />
        </receiver>
        <receiver android:name="com.biometrac.core.CommcareReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="org.commcare.dalvik.api.action.data.update"></action>
                <action android:name="org.commcare.dalvik.api.action.session.login"></action>
            </intent-filter>
		</receiver>
        <receiver android:name="com.biometrac.core.BootReceiver" 
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
		</receiver>
        <activity android:name="org.acra.CrashReportDialog"
                  android:theme="@style/Theme.Dialog"
                  android:launchMode="singleInstance"
                  android:excludeFromRecents="true"
                  android:finishOnTaskLaunch="true" />
        <activity android:name=".AdvancedPreferences" android:label="Advanced Preferences">
            <intent-filter>
                <action android:name=".Preferences" />
                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.biometrac.core.IntentFilterTest"
            android:label="AIntentFilterTest" >
            <intent-filter>
				<action android:name="android.intent.action.View" />
				<category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.biometrac.core.TestEngine"
            android:label="ATestEngine" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
		<activity
            android:name="com.biometrac.core.CCSyncActivity"
            android:label="CCSynch" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.biometrac.core.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.biometrac.core.SCAN" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.biometrac.core.ENROLL" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.biometrac.core.IDENTIFY" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.biometrac.core.PIPE" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".PipeActivity"
            android:label="VirtualCohort" 
            android:screenOrientation="portrait"
            android:noHistory="false" >
            <intent-filter>
                <action android:name="android.intent.action.View" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CleanupActivity"
            android:label="VirtualCohort" 
            android:screenOrientation="portrait"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.View" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
		<activity
            android:name=".ScanningActivity"
            android:label="VirtualCohort"
            android:noHistory="false"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTop">
            <intent-filter>
            <action android:name="android.intent.action.View" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
            <!--
git diff				<action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            <meta-data android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
        		android:resource="@xml/device_filter" />
       		 -->
        </activity>
        <activity android:name=".ScannerCatcher"
                  android:label="@string/app_name"
                  android:theme="@style/Theme.Transparent"
                  android:noHistory="true"
                  android:excludeFromRecents="true"
                  android:taskAffinity="com.biometrac.core.taskAffinityScannerCatcher"
                  android:process=":ScannerCatcherProcess"
                  android:exported="false">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            <meta-data android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" android:resource="@xml/usb_filter" />
        </activity>
		<activity
            android:name=".EnrollActivity"
            android:label="VirtualCohort" 
            android:screenOrientation="portrait">
		</activity>
		<activity
            android:name=".IdentifyActivity"
            android:label="VirtualCohort" 
            android:screenOrientation="portrait">
		</activity>
		<service android:name=".PersistenceService" />
		<service android:name=".CommCareSyncService" />
		<service android:name=".NotificationReceiver" />
    </application>

</manifest>
