<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_shape_blue_round" >
   	<ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:src="@drawable/virtualcohort_wh" />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@color/light_blue">
        <TextView
            android:id="@+id/pop_up_wait_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:textColor="@color/text_color"
	   	    android:textStyle="bold" 
	   	    android:textSize="20dp" 
            android:text="Please Wait" />

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
		</LinearLayout>
	        <Button
	            style="@style/button_red"
	            android:id="@+id/pop_up_wait_cancel_btn"
	            android:layout_margin="10dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:text="Cancel" />

    </LinearLayout><!-- From: file:/home/sarwar/workspace/biometrac/BMTCore/app/src/main/res/layout/pop_up_wait.xml -->