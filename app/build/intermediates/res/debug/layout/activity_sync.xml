<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sync_txt_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/title_text"
        android:text="CaseType" />

    <Spinner
        android:id="@+id/sync_spin_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sync_txt_lt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/title_text"
        android:text="left_thumb" />

    <Spinner
        android:id="@+id/sync_spin_lt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
	<TextView
        android:id="@+id/sync_txt_rt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/title_text"
        android:text="right_thumb" />

    <Spinner
        android:id="@+id/sync_spin_rt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sync_txt_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/title_text"
        android:text="left_index" />

    <Spinner
        android:id="@+id/sync_spin_li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sync_txt_ri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/title_text"
        android:text="right_index" />

    <Spinner
        android:id="@+id/sync_spin_ri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sync_accept_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        style="@style/button_dark"
        android:text="Accept Settings" />

</LinearLayout>
